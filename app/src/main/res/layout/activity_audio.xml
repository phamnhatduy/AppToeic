<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo_bg_1"
    tools:context=".View.AudioActivity">
    <LinearLayout
        android:id="@+id/lin_text"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorBackground"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-black"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_no"
            android:textSize="20dp"
            android:text="No:12"/>
        <TextView
            android:textColor="@color/colorBackground"
            android:fontFamily="sans-serif-black"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_correct"
            android:textSize="20dp"
            android:text="Correct:0"/>
        <TextView
            android:textColor="@color/colorBackground"
            android:fontFamily="sans-serif-black"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_incorrect"
            android:textSize="20dp"
            android:text="Incorrect:0"/>

    </LinearLayout>
    <TextView
        android:layout_below="@id/lin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="25dp"
        android:textColor="@color/colorBackground"
        android:text="Click to listen"/>

    <ImageView
        android:layout_below="@id/txt_title"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_speaker"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/play_sound_1" />
    <TextView
        android:visibility="invisible"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@id/image_speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_shows"
        android:text="AAAAAAAAA"
        android:textColor="@color/colorBackground"
        android:textSize="25dp"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_below="@+id/txt_shows"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_congra_review"
        android:textSize="20dp"
        android:text="Congratulations!"
        android:textColor="@color/colorAccent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_congra_review">
        <RadioGroup
            android:id="@+id/radio_group_ans1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <RadioButton
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:button="@android:color/transparent"
                android:id="@+id/radio_a"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/radio_flat_selector"
                android:text="A" />
            <RadioButton
                android:textColor="@color/colorText"
                android:layout_margin="10dp"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:id="@+id/radio_b"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/radio_flat_selector"
                android:text="B" />
            <RadioButton
                android:textColor="@color/colorText"
                android:layout_margin="10dp"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:id="@+id/radio_c"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/radio_flat_selector"
                android:text="C" />
            <RadioButton
                android:textColor="@color/colorText"
                android:layout_margin="10dp"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:id="@+id/radio_d"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/radio_flat_selector"
                android:text="D" />

        </RadioGroup>
    </ScrollView>
</RelativeLayout>
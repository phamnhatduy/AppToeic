<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="3"
    tools:context=".View.ReviewActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_no"
            android:textSize="20dp"
            android:text="Num:0"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_true"
            android:textSize="20dp"
            android:text="Correct:0"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_false"
            android:textSize="20dp"
            android:text="Incorrect:0"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/image_speaker"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/play_sounds" />
        <ImageView
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:src="@drawable/x_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/image_x"
            android:layout_below="@id/image_speaker"/>
       <TextView
           android:visibility="invisible"
           android:layout_centerHorizontal="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/txt_showAnswer"
           android:text="AAAAAAAAAAA"
           android:textSize="20dp"
           android:layout_below="@id/image_x"/>

        <EditText
            android:layout_centerInParent="true"
            android:id="@+id/edt_answer"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_below="@+id/image_x"
            android:layout_marginTop="114dp"
            android:hint="Your Answer" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Answer"
            android:textSize="20dp" />
        <Button
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_change"
            android:text="Change"
            android:textSize="20dp"/>

    </LinearLayout>
</LinearLayout>